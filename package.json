{
  "name": "radar-repeater",
  "private": true,
  "scripts": {
    "bootstrap": "npm --prefix server i && npm --prefix client i",
    "dev": "npm-run-all -p dev:server dev:client",
    "dev:server": "npm --prefix server run dev",
    "dev:client": "npm --prefix client run dev",
    "build": "npm --prefix server run build && npm --prefix client run build"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5",
    "typescript": "^5.6.3"
  },
  "dependencies": {
    "phaser": "^3.90.0",
    "socket.io-client": "^4.8.1"
  }
}
