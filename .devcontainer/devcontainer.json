{
  "name": "Radar Repeater",
  "image": "mcr.microsoft.com/devcontainers/javascript-node:20",
  "features": { "ghcr.io/devcontainers/features/node:1": { "version": "20" } },
  "portsAttributes": {
    "3001": { "label": "Server", "onAutoForward": "openBrowser" },
    "5173": { "label": "Client", "onAutoForward": "openBrowser" }
  },
  "postCreateCommand": "npm i -g npm && npm run bootstrap"
}